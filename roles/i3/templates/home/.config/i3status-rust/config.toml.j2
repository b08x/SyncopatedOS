[[block]]
block = "sound"
format = " $icon { $volume|} "
[[block.click]]
button = "left"
cmd = "pavucontrol"
[[block.click]]
button = "middle"
cmd = "{{ desktop.terminal_alt }} --class 'alsamixer' --title 'alsamixer' -e alsamixer -D hw:0"

[[block]]
block = "load"
format = " $icon $5m.eng(w:4)  "
interval = 3
warning = 0.8
critical = 2.0
[[block.click]]
button = "left"
cmd = "{{ desktop.terminal }} --class 'govna' -e set-govna.sh performance"
[[block.click]]
button = "right"
cmd = "{{ desktop.terminal }} --class 'govna' -e set-govna.sh powersave"
[[block.click]]
button = "middle"
cmd = "{{ desktop.terminal_alt }} --class 'htop' --title 'htop' -e htop"

