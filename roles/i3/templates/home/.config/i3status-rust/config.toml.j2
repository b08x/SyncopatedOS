[[block]]
block = "custom"
command = "curl 'https://wttr.in/?format=1' -s | xargs"
interval = 300
[[block.click]]
button = "left"
cmd = "{{ desktop.terminal }} --class 'weather' --hold -e wthrr"
[[block.click]]
button = "right"
cmd = "{{ desktop.terminal }} --class 'weather' --hold -e wthrr -f w"

[[block]]
block = "time"
interval = 30
[block.format]
full = " $icon $timestamp.datetime(f:'%a %Y-%m-%d %R', l:en_US) "
short = " $icon $timestamp.datetime(f:%R) "
[[block.click]]
button = "left"
cmd = "uxterm -hold -e cal -s"

[[block]]
block = "battery"
format = " $percentage {$time |} "
if_command = "test -e /sys/class/power_supply/BAT0"
