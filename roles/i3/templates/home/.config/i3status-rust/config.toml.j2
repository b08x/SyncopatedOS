[theme]
theme = "syncopated"
[theme.overrides]
separator_bg = "{{ colors.primary.background }}"
separator_fg = "{{ colors.workspace.text }}"
separator = " ┆ "
end_separator_bg = "{{ colors.primary.background }}"
end_separator_fg = "{{ colors.workspace.text }}"
end_separator = "┆"

[icons]
icons = "awesome6"
[icons.overrides]
weather_clouds = " "
weather_default = " "        # Cloud symbol as default
weather_rain = " "
weather_snow = " "
weather_sun = " "
weather_thunder = " "
cogs = " "

[[block]]
block = "custom"
command = "{{ user.home }}/.local/bin/openai_usage.rb"
interval = 300

[[block]]
block = "menu"
text = ""
[[block.items]]
display = " -&gt;   noteinfo   &lt;-"
cmd = "{{ desktop.terminal }} --class 'noteinfo' -e noteinfo.rb"
[[block.items]]
display = " -&gt; brightness &lt;-"
cmd = "{{ desktop.terminal }} --class 'brightness' -e brightness.rb"
