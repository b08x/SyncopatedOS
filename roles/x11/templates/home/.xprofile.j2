#!/usr/bin/env bash
export UU_ORDER="$UU_ORDER:~/.xprofile"

export XDG_DESKTOP_SESSION="{{ de.wm }}"
export XDG_CURRENT_DESKTOP="{{ de.wm }}"
export XDG_CONFIG_HOME="$HOME/.config"

if [ -d /usr/share/fonts/75dpi ]; then
	xset +fp /usr/share/fonts/75dpi
fi

if [ -d /usr/share/fonts/100dpi ]; then
	xset +fp /usr/share/fonts/100dpi
fi

xset s off
xset -dpms
xset -b

numlockx on

{% if x.autostart != 'default' %}
{% for program in x.autostart %}
{{ program }}
{% endfor %}
{% endif %}

[[ -f "$HOME/.asound.state" ]] && alsactl restore -f "$HOME/.asound.state"
