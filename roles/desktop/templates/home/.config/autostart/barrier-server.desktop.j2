[Desktop Entry]
Type=Application
Name=Barrier
Comment=Keyboard and mouse sharing solution
Exec=/usr/bin/barriers -f --no-tray --debug INFO --name {{ ansible_hostname}} --disable-crypto --disable-client-cert-checking -c {{ user.home }}/.config/Debauchee/{{ ansible_hostname }}.conf --address :24800
Icon=barrier
Terminal=false
Categories=Utility;RemoteAccess;
Keywords=keyboard;mouse;sharing;network;share;
